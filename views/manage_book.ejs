<body>
  <header>
    <h1>Admin Dashboard</h1>
    <nav>
      <ul>
        <li><a href="/directory">Dashboard</a></li>
        <li><a href="/admin/book">Book Management</a></li>
        <li><a href="/admin/users">User Management</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  
  <main>
    <section>
      <input type="text" id="searchInput" placeholder="Search by title or author" onkeyup="filterBooks()">
      <div class="book-list">
        <% books.forEach(function(book) { %>
          <div class="book-item">
            <div class="book-image">
              <img src="/assets/images/<%= book.image %>" alt="Book Image">
            </div>
            <div class="book-info">
              <p class="book-title">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a href="/books/<%= book.id %>"><%= book.title %></a>
                </p>
              <p class="book-author">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Author: <%= book.author %></p>
              <p class="book-genre">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Genre: <%= book.genre %></p>
            </div>
          </div>
        <% }) %>
      </div>
      
      <h2>Book Management</h2><br>
      <h3>Add New Book</h3>
      <form id="add-book-form" enctype="multipart/form-data" action="/admin/book/add" method="POST"">
        <input type="text" name="title" placeholder="Title" required>
        <input type="text" name="author" placeholder="Author" required>
        <select class="form-control" name="genre" id="genre" required="">
          <option value="">Select Genre</option>
          <option value="Fantasy">Fantasy</option>
          <option value="Science-Fiction">Science Fiction</option>
          <option value="Historical-Fiction">Historical Fiction</option>
          <option value="Realistic-Fiction">Realistic Fiction</option>
          <option value="Fan-Fiction">Fan Fiction</option>
          <option value="Narrative-Non-Fiction">Narrative Non Fiction</option>
          <option value="Biography">Biography</option>
          <option value="Periodicals">Periodicals</option>
          <option value="Self-Help-Book">Self Help Book</option>
          <option value="Reference-Book">Reference Book</option>
        </select><br />
        <input type="text" name="description" placeholder="Description" required>
        <input type="file" name="image" required>
        
        <button type="submit">Add Book</button>
      </form>
      
      <h3>Edit Book Details</h3>
      <form id="edit-book-form" enctype="multipart/form-data" action="/admin/book/add" method="POST"">
        <select id="book-select" name="bookId">
          <% books.forEach(function(book) { %>
            <option value="<%= book.id %>"><%= book.title %></option>
          <% }); %>
        </select>
        <input type="text" id="edit-title" name="title" placeholder="Title" required>
        <input type="text" id="edit-author" name="author" placeholder="Author" required>
        <select class="form-control" name="genre" id="genre" required="">
          <option value="">Select Genre</option>
          <option value="Fantasy">Fantasy</option>
          <option value="Science-Fiction">Science Fiction</option>
          <option value="Historical-Fiction">Historical Fiction</option>
          <option value="Realistic-Fiction">Realistic Fiction</option>
          <option value="Fan-Fiction">Fan Fiction</option>
          <option value="Narrative-Non-Fiction">Narrative Non Fiction</option>
          <option value="Biography">Biography</option>
          <option value="Periodicals">Periodicals</option>
          <option value="Self-Help-Book">Self Help Book</option>
          <option value="Reference-Book">Reference Book</option>
        </select><br /> 
        <input type="text" id="edit-description" name="description" placeholder="Description" required>
        <input type="file" name="image" required>
        <button type="submit" class="edit-book-btn">Save Changes</button>
      </form>
      
      <h3>Delete Book</h3>
      <form id="delete-book-form">
        <select id="delete-book-select" name="bookId">
          <% books.forEach(function(book) { %>
            <option value="<%= book.id %>"><%= book.title %></option>
          <% }); %>
        </select>
        <button type="submit" class="delete-book-btn">Delete Book</button>
      </form>
    </section>
  </main>
  
  <footer>
    &copy; 2023 Admin Dashboard
  </footer>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script>
        function filterBooks() {
          const input = document.getElementById('searchInput');
          const filter = input.value.toLowerCase();
          const bookItems = document.getElementsByClassName('book-item');

          // Iterate through each book item and hide/show based on the filter
          for (let i = 0; i < bookItems.length; i++) {
            const title = bookItems[i].querySelector('.book-title').textContent.toLowerCase();
            const author = bookItems[i].querySelector('.book-author').textContent.toLowerCase();

            if (title.includes(filter) || author.includes(filter)) {
              bookItems[i].style.display = '';
            } else {
              bookItems[i].style.display = 'none';
            }
          }
        }


      $(document).ready(function() {
      // Add Book Form Submission
      $('#add-book-form').submit(function(event) {
        event.preventDefault();
        var formData = $(this).serialize();
        
        // Make AJAX request to add book
        $.ajax({
          type: 'POST',
          url: '/admin/book/add',
          data: formData,
          success: function(response) {
            // Handle success response
            console.log(response);
          },
          error: function(error) {
            // Handle error response
            console.log(error);
          }
        });
      });



    // Edit Book Form Submission
    $('#edit-book-form').submit(function(event) {
      event.preventDefault();
      var formData = $(this).serialize();
      var bookId = $('#book-select').val();

      // Make AJAX request to edit book
      $.ajax({
        type: 'POST',
        url: '/admin/book/edit/' + bookId,
        data: formData,
        success: function(response) {
          // Handle success response
          console.log(response);
        },
        error: function(error) {
          // Handle error response
          console.log(error);
        }
      });
    });



    // Delete Book Form Submission
    $('#delete-book-form').submit(function(event) {
      event.preventDefault();
      var formData = $(this).serialize();
      var bookId = $('#delete-book-select').val();

      // Make AJAX request to delete book
      $.ajax({
        type: 'POST',
        url: '/admin/book/delete/' + bookId,
        data: formData,
        success: function(response) {
          // Handle success response
          console.log(response);
        },
        error: function(error) {
          // Handle error response
          console.log(error);
        }
      });
    });
  });
  </script>
</body>
</html>
