    .book-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      margin-top: 20px;
    }

    .book-item {
  width: calc(48% - 10px);
  display: flex;
  align-items: center;
  background-color: #00ffd957;
  border-radius: 5px;
  box-shadow: 10px 10px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  padding: 1%;
}

.book-image {
  width: 100px; /* Adjust the width as desired */
  height: 100px; /* Adjust the height as desired */
}

.book-image img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

